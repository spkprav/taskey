<div id="main">
  <div id="left">
    <%= form_for(@group) do |f| %>
      <%= f.text_field :name, placeholder: 'Enter Group Name' %>
      <%= f.submit "Create Group", style: 'display:none;' %>
    <% end %>
    <ul>
      <li><a href="<%= root_url %>?task=mytask" class="<%= (params[:task] == 'mytask')  ? 'selected' : '' %>">My Tasks</a></li>
      <% @groups.each do |group| %>
        <li><a href="<%= root_url + 'selected/group/' + group.id.to_s %>" class="<%= (session[:selected_group_id] == group.id.to_s && params[:task] == nil) ? 'selected' : '' %>"><%= group.name %></a></li>
      <% end %>
    </ul>
  </div>
  <div id="middle">
    <div style='position:relative;'>
      <%= form_for(@task) do |f| %>
        <%= f.text_field :title, style: 'width: 100%;padding: 5px;', placeholder: 'Enter Task Title' %><br />
        <%= f.text_area :description, style: 'width: 100%;', placeholder: 'Enter Task Description' %>
        <%= f.hidden_field :group_id, value: session[:selected_group_id] %>
        <%= f.submit "Create Task", class: 'btn btn-sm btn-success btn-create-task'%>
      <% end %>
    </div>
    <ul>
      <% @tasks.each do |task| %>
        <li>
            <a href="<%= root_url + 'selected/task/' + task.id.to_s %>" class="<%= (session[:selected_task_id] == task.id.to_s) ? 'selected' : '' %>" ><%= task.title %></a>
        </li>
      <% end %>
    </ul>
  </div>
  <div id="right">
    <div style='position:relative;'>
      <%= form_for(@selected_task) do |f| %>
        <%= f.hidden_field :group_id, value: session[:selected_group_id] %>
        <div class="field">
          <%= f.collection_select :user_id, User.all, :id, :email,{:include_blank => "Unassigned"} %>
        </div>
        <div class="field">
          <%= f.check_box :completed %> <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.text_area :description %>
        </div>
        <%= f.submit 'Update', class: 'btn btn-sm btn-success btn-create-task', style: 'position:absolute;bottom:1px;right:1px;' %>
      <% end %>
    </div>
    <ul id="comments_ul">
      <% @selected_task.feeds.each do |feed| %>
        <li>
          <div style="margin-bottom:1px solid #eee;padding-bottom:2px;color:#666;">
            <i><%= feed.user.email %></i> - <i><%= time_ago_in_words(feed.created_at) %> ago</i>
          </div>
          <div><%= simple_format(feed.description) %></div>
          <hr />
        </li>
      <% end %>
    </ul>
    <div style="width:100%;position:relative;">
      <%= form_for(@feed) do |f| %>
        <%= f.hidden_field :task_id, value: session[:selected_task_id] %>
        <%= f.hidden_field :type, value: 'comment' %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="field">
          <%= f.text_area :description, style: 'width:100%' %>
        </div>
        <%= f.submit 'Comment', class: 'btn btn-sm btn-success btn-create-task', style: 'position:absolute;bottom:1px;right:1px;' %>
      <% end %>
    </div>
  </div>
</div>
